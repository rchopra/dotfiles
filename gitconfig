[user]
	email = rqchopra@gmail.com
	name = Rishi Chopra

[diff]
[color]
    ui = auto

[core]
	excludesfile = /Users/rishi/.gitignore
	autocrlf = input
	safecrlf = false
    commentChar = auto

[alias]
    co = checkout
    ci = commit
    st = status
    b = branch
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
    type = cat-file -t
    dump = cat-file -p
    staged = diff --cached

    l = "!source ~/.githelpers && pretty_git_log"
    la = !git l --all
    r = !git l -30
    ra = !git r --all

[merge]
    tool = vimdiff
[push]
	default = simple
[credential]
	helper = osxkeychain
